@model Student;

<h1>Edit Student</h1>

<form  asp-action="Edit" method="post">
    @*Id *@
    <div class="mb-3">
        <label asp-for="Id" class="form-label">Id</label>
        <input asp-for="Id" class="form-control" id="Id" aria-describedby="Id">

    </div>
    @*FirstName *@
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">First Name</label>
        <input  asp-for="FirstName" class="form-control" id="FirstName" aria-describedby="FirstName">
 
    </div>

    @*LastName *@
    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Last Name</label>
        <input  asp-for="LastName"  class="form-control" id="LastName" aria-describedby="LastName">

    </div>
    @*GPA *@
    <div class="mb-3">
        <label asp-for="GPA" class="form-label">GPA</label>
        <input asp-for="GPA" class="form-control" id="GPA" aria-describedby="GPA">
    </div>
    @*Course *@
    <div class="mb-3">
        <label asp-for="Course" class="form-label">Course</label>
        <select asp-for="Course" asp-items="Html.GetEnumSelectList(typeof(Course))" class="form-control"></select>
    </div>

    @*DateEnrolled *@
    <div class="mb-3">
        <label asp-for="AdmissionDate" class="form-label">Course</label>
        <input asp-for="AdmissionDate" class="form-control" id="AdmissionDate" aria-describedby="AdmissionDate">

    </div>

   
    @*Email *@
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" id="Email" aria-describedby="Email">
    </div>
     <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-info w-100">Submit</button>
    </div>
</form>

<div class="d-flex justify-content-center mt-2 ">
    <a asp-action="Index" class="d-flex justify-content-center w-100" style="text-decoration:none"> <button type="button" class=" btn btn-secondary w-100">Back</button> </a>
</div>
